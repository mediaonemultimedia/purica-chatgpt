{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          ".next/**",
          "public/**",
          "package.json"
        ]
      }
    }
  ],
  "routes": [
    { 
      "handle": "filesystem" 
    },
    { 
      "src": "/(.*)", 
      "dest": "/server.js" 
    }
  ]
}